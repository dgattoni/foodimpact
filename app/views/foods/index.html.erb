<h1>Listing foods</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Quantity produced</th>
    <th>Quantity consumed</th>
    <th>sustainability</th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.name %></td>
    <td><%= food.category %></td>
    <td><%= food.address %></td>
    <td><%= food.latitude %></td>
    <td><%= food.longitude %></td>
    <td><%= food.quantity_produced %></td>
    <td><%= food.quantity_consumed %></td>
     <td><%= food.sustainability %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

