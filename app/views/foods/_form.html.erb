<%= form_for(@food) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %><br />
    <%= f.select( :category, options_for_select(["Grain","Fruits","Legumes","Vegetables","Nuts","Spices","Tea/Coffee","Seeds"]), {},{:class=>"form-control"}) %>
  </div>

  <div class="form-group">
     <%= f.hidden_field :address, :class=>"form-control" %>
  </div>
 
  <div class="form-group">
    <%= f.label :quantity_produced %><br />
    <%= f.text_field :quantity_produced, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity_consumed %><br />
    <%= f.text_field :quantity_consumed, :class=>"form-control" %>
  </div>

 <div class="form-group">
    <%= f.label :country %><br />
    <%= f.text_field :country, :class=>"form-control" %>
  </div>

  


<br><br>

  <div class="form-group">
    <%= f.submit :class=>"btn btn-success", :id=>"create_food_data" %>
  </div>
<% end %>
